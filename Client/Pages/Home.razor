@page "/"
@layout MainLayout

<PageTitle>SpeechInsight</PageTitle>

<div class="home-hero">
    <h1 class="home-title">SpeechInsight</h1>
    <p class="home-tagline">Turn audio into clear transcriptions with speaker detection.</p>
    <NavLink href="/upload" class="btn-primary">
        Upload &amp; transcribe
    </NavLink>
</div>

<div class="home-cards">
    <div class="home-card">
        <span class="home-card-title">Upload audio</span>
        <p>Support for MP3, WAV, M4A and more. Up to 25 MB.</p>
    </div>
    <div class="home-card">
        <span class="home-card-title">Transcribe</span>
        <p>Powered by speech-to-text with optional speaker separation.</p>
    </div>
    <div class="home-card">
        <span class="home-card-title">Export</span>
        <p>Copy, or download as text or JSON.</p>
    </div>
</div>
